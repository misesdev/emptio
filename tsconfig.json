{
    "extends": "@react-native/typescript-config/tsconfig.json",
    "compilerOptions": {
        "module": "CommonJS",
        "esModuleInterop": true,
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./*"],
            "@assets/*": ["./assets"],
            "@src/*": ["src/*"],
            "@components/*": ["src/components/*"],
            "@services/*": ["src/services/*"],
            "@storage/*": ["src/storage/*"],
            "@screens/*": ["src/screens/*"],
        },
    },
    "include": [
        "./**/*.ts",
        "./**/*.tsx",
    ],
    "exclude": [
        "node_modules",
        "<node_internals>/**",
        "bin/**"
    ]
}
